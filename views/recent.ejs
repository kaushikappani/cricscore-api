<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="home.css" />
    <title>CricScore</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light navbar-fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="cricket.png"
            alt=""
            width="30"
            height="24"
            class="d-inline-block align-text-top"
          />
          CricScore
        </a>
      </div>
    </nav>
    <div class="container mt-2 mb-3">
      <div class="row" style="display: flex">
        <% data.forEach(function(data){ %>
        <div class="col-lg-6 col-md-6" style="padding: 5px">
          <div class="card p-3 mb-2" style="height: 100%">
            <div class="d-flex justify-content-between">
              <div class="d-flex flex-row align-items-center">
                <div class="ms-2 c-details">
                  <h6 class="mb-0"><%=data.title%></h6>
                  <span><%-data.date %></span>
                </div>
              </div>
              <div class="badge"><span>recent</span></div>
            </div>
            <div class="mt-5">
              <h3 class="heading"><%=data.score%></h3>
              <div class="mt-5"></div>
            </div>
          </div>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
  <script>
    window.setInterval("refresh()", 10000);
    function refresh() {
      window.location.reload();
    }
    let arr = document.getElementsByClassName("schedule-date");

    for (let i = 0; i < arr.length; i++) {
      var d = new Date(parseInt(arr[i].getAttribute("timestamp")));
      time = d.toTimeString().split(" (")[0];
      arr[i].innerHTML = time;
    }
  </script>
</html>
